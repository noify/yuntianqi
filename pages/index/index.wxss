/**index.wxss**/
page{
  background: #f2f2f2;
  height: 100%;
}
.now{
  display: flex;
  background: linear-gradient(#459df5,#72b9ff);
  flex-direction: column;
  align-items: center;
  color: #fff;
  width: 100%;
  padding: 10rpx 30rpx;
  padding-top: 40px; 
  box-sizing: border-box;
  height: 600rpx;
  box-shadow: 1px 0px 2px rgba(150, 150, 150, 0.3);
}
.now >image{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  left: 50rpx;
  top: 30rpx;
}
.now-text{
  text-align: center;
  font-size: 20px;
  text-shadow: 1px 0px 2px rgba(150, 150, 150, 0.3);
}
.temperature{
  font-size: 150rpx;
  font-weight: bold;
  padding-top: 30rpx;
  padding-bottom: 60rpx;
  text-shadow: 1px 0px 2px rgba(150, 150, 150, 0.3);
}
.now .bot{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  padding-top: 10rpx; 
  height: 100rpx;
  align-items: center;
}

.chooseLocation, .wind,.last_update{
  font-size: 30rpx;
}
.wind{
  position: absolute;
  right: 50rpx;
  top: 30rpx;
}
.daily{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  height: 200rpx;
}
.daily-now{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  height: 100rpx;
}
.daily-text{
  position: relative;
  padding-left: 25px;
}
.daily-text image{
  width: 19px;
  height: 19px;
  position: absolute;
  top: 0;
  left: 2px;
}
.suggestion-wrap{
  height: calc(100% - 650rpx);
  display: flex;
  align-items: center;
  flex-direction: column;
}
.suggestion-wrap .tips{
  font-size: 35rpx;
  padding: 30rpx;
  border-bottom: 1px solid rgba(150, 150, 150, 0.3); 
  margin-bottom: 30rpx;
}
.bar{
  background: linear-gradient(#72b9ff,#72b9ff);
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0px;
  left: 0px;
  display: flex;
  border-top: 1px solid rgba(255, 255, 255, 0.3); 
  box-shadow: -1px 0px 2px rgba(150, 150, 150, 0.3);
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}
.bar .share{
  display: block;
  background: transparent;
  width: 70rpx;
  height: 70rpx;
  padding: 0;
  margin: 0;
}
.bar .share::after{
  border: none;
}
.bar .share image{
  width: 65rpx;
  height: 65rpx;
}
.bar .locationList{
  width: 75rpx;
  height: 75rpx;
}

.indexScroll{
 padding-bottom: 100rpx; 
}