/* pages/chooseLocation/chooseLocation.wxss */
page{
  background: #459df5;
  height: 100%;
}
.container{
  padding: 0 30rpx;
  background: linear-gradient(#459df5,#a9d5ff);
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.item{
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 15px;
  box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.3);
  background: white;
  border-radius: 3px;
  margin-bottom: 15px; 
}
.left{
  display: flex;
  flex-direction: column;
}
.time{
  font-size: 12px;
  margin-bottom: 3px;
}
.time .gps{
  width: 30rpx;
  height: 30rpx;
}
.location{
  font-size: 21px;
}
.item .right image{
  width: 36px;
  height: 36px;
  margin-left: 15px;
  border-radius: 50%;
  padding: 7px;
  background: #459df5;
}
.right{
  display: flex;
}
.right text{
  font-size:40px;
  font-weight: bolder;
}
.bot{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.tips{
  font-size: 12px;
  color: #f2f2f2;
}
.add{
  position: fixed;
  z-index: 99;
  right: 20px;
  bottom: 20px;
}
.add image{
  height: 50px;
  width: 50px;
  border-radius: 50%;
}