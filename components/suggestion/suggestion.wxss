/* components/suggestion.wxss */
.suggestion{
  width: 100%;
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  background: #f2f2f2;
  box-sizing: border-box;
}
.suggestion-item{
  background: #fff;
  display: flex;
  width: 31.3333%;
  margin: 0 1% 10rpx 1%;
  flex-direction: column;
  align-items: center;
  height: 190rpx;
  border-radius: 2px;
  padding: 30rpx 0;
  box-shadow: 1px 0px 2px rgba(150, 150, 150, 0.3);
}
.suggestion-item image{
  width: 120rpx;
}
.suggestion-name{
  padding-top: 20rpx; 
  font-size: 12px;
  color: #ccc;
}
.suggestion-brief{
  padding-top: 10rpx;
  font-size: 18px;
  font-weight: bold;
}